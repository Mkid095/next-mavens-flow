{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "node $CLAUDE_PROJECT_DIR/.claude/hooks/pre-task-flow-validation.js"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "bash $CLAUDE_PROJECT_DIR/.claude/hooks/session-restore.sh"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "bash $CLAUDE_PROJECT_DIR/.claude/hooks/session-save.sh"
          }
        ]
      }
    ]
  },
  "mcpServers": {
    "supabase": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-supabase"]
    },
    "web-search-prime": {
      "command": "npx",
      "args": ["-y", "@zengooglebing/web-search-prime"]
    },
    "web-reader": {
      "command": "npx",
      "args": ["-y", "@zengooglebing/web-reader"]
    },
    "4_5v_mcp": {
      "command": "npx",
      "args": ["-y", "@zengooglebing/4-5v-mcp"],
      "disabled": false
    }
  }
}
